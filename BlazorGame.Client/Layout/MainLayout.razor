@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="page">
    @if (Navigation.Uri.EndsWith("/login") || Navigation.Uri.EndsWith("/register"))
    {
        @Body
    }
    else
    {
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <article class="content px-4">
                @Body
            </article>
        </main>
    }
</div>